<project name="jobqs" default="all" basedir=".">
<description>Build job queue server of SPK</description>

  <target name="init">
    <delete dir="classes"/>
    <mkdir dir="classes" />
  </target>

<!-- ALL BUILDING -->
  <target name="all" depends="compile, javadoc, jar, test" />

<!-- COMPILE BUILDING -->
  <target name="compile" depends="init" description="Compile job queue server">
    <javac srcdir="uw" destdir="classes" compiler="javac1.4" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>
        <pathelement location="classes" />
      </classpath>
    </javac>
  </target>

<!-- TEST BUILDING -->
  <target name="test" depends="init" description="Compile job queue server test">
    <javac srcdir="test" destdir="test" compiler="javac1.4" deprecation="${build.compiler.deprecation}" debug="${build.compiler.debug}">
      <classpath>
        <pathelement location="classes" />
        <pathelement location="../dbapi/dbAPI.jar" />
      </classpath>
    </javac>
  </target>

<!-- JAVADOC BUILDING -->
  <target name="javadoc">
    <property name="jdk-docs-location" value="http://java.sun.com/j2se/1.4/docs/api"/>
    <property name="local-package-list" value="file:////opt/jdk1.4/docs/api"/>
    <delete dir="javadoc-tmp"/>
    <mkdir dir="javadoc-tmp"/>
    <copy todir="javadoc-tmp">
      <fileset dir="uw" includes="**/*.java" excludes="**/CVS/"/>
    </copy>
    <delete dir="javadoc"/>
    <mkdir dir="javadoc"/>
    <javadoc packagenames="*"
       sourcepath="javadoc-tmp"
       destdir="javadoc"
       windowTitle="Job Queue Server"
       public="true">
      <classpath>
        <pathelement location="classes" />
      </classpath>
       <link href="${jdk-docs-location}"
             offline="true"
             packagelistLoc="${local-package-list}" />
    </javadoc>
    <copy todir="classes">
      <fileset dir="uw" includes="**/*.gif,**/*.properties"/>
    </copy>
    <delete dir="javadoc-tmp"/>
  </target>

<!-- JAR BUILDING -->
  <target name="jar" depends="compile">
    <jar jarfile="jobqs.jar" basedir="classes" compress="false">
      <include name="**/*.class" />
      <include name="**/*.gif" />
      <include name="**/*.html" />
      <include name="**/*.properties" />
    </jar>
  </target>

<!-- CLEAN ALL -->
  <target name="clean" depends="init">
    <delete dir="javadoc" />
    <delete dir="classes" />
    <delete>
      <fileset dir=".">
        <include name="**/*.class"/>
        <include name="*.jar"/>
      </fileset>	
    </delete>
  </target>

</project>



