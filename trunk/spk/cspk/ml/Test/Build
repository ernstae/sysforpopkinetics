# !/bin/bash
#
# job number for this test
JOB=1401
#
echo $JOB > JOB
for file in DataSet.h IndData.h MontePars.h NonmemPars.h Pred.h
do
	echo "scp whitechuck:/tmp/spkcmptest-job-$JOB/$file ."
	scp whitechuck:/tmp/spkcmptest-job-$JOB/$file .
done
echo "change 'enum METHOD { analytic,' to 'enum METHOD { adapt,'"
mv MontePars.h MontePars.tmp
sed  < MontePars.tmp > MontePars.h \
	-e "s/enum *METHOD *{ *analytic,/enum METHOD { adapt,/" 
#
for file in \
	AdaptIntegral.cpp \
	GridIntegral.cpp \
	Gsl2SpkError.cpp \
	MapBay.cpp \
	MapMonte.cpp \
	monteDriver.cpp \
	MontePopObj.cpp  \
	adapt.c  \
	pow_ii.c
do
	echo "cp ../$file $file"
	cp ../$file $file
done
#
for file in AUTHORS NEWS README ChangeLog
do
	if [ ! -e $file ]
	then
		echo "touch $file"
		touch $file
	fi
done
#
echo "aclocal"
aclocal
#
echo "autoheader"
autoheader
#
echo "autoconf"
autoconf
#
echo "automake --add-missing"
automake --add-missing
#
echo "./configure"
./configure
#
echo "make"
make
